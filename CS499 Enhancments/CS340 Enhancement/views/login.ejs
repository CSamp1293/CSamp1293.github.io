<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="login-bg">
    <div class="container">
      <h2>Login</h2>

      <% if (errors && errors.length > 0) { %>
        <ul class="error-list" role="alert">
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
      <% } %>

      <% if (successMessage) { %>
        <div id="message" class="success" role="alert"><%= successMessage %></div>
      <% } %>

      <form id="loginForm" method="POST" action="/api/auth/login">
          <label>Email:</label>
          <input type="email" name="email" value="<%= formData?.email || '' %>" required />

          <label>Password:</label>
          <input type="password" name="password" required />

          <button type="submit">Login</button>
      </form>
    </div>
  </div>
</body>
</html>